<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:symphonyControls="clr-namespace:Symphony.Conductor.Controls;assembly=SymphonyConductor"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Color x:Key="SymphonyDarkBlue">#304362</Color>
    <Color x:Key="SymphonyLightBlue">#d6dbe9</Color>
    <Color x:Key="SymphonyLightLightBlue">#e3e7f0</Color>

    <SolidColorBrush x:Key="SymphonyBorderColor" Color="{StaticResource SymphonyDarkBlue}"/>
    <SolidColorBrush x:Key="SymphonyBorderBackground" Color="{StaticResource SymphonyLightBlue}"/>
    <SolidColorBrush x:Key="SymphonyListBackground" Color="{StaticResource SymphonyLightLightBlue}"/>


    <Style x:Key="TransperentButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
