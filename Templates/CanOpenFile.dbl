function CanOpenFile    ,boolean

    required in fileSpec    ,string
    optional in throwError  ,boolean
    endparams

    stack record
        tmpCh   ,int
        retVal  ,boolean
    endrecord

proc

    try
    begin
        open(tmpCh=syn_freechn(),i:s,fileSpec)
        retVal=true
    end
    catch (ex)
    begin
        retVal=false
        if (throwError)
            throw
    end
    finally
    begin
        if (tmpCh&&chopen(tmpCh))
            close tmpCh
    end
    endtry

    freturn retVal

endfunction

