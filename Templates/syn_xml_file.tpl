function <structure_name>_xml_file ,^val
    .include "<STRUCTURE_NOALIAS>" repository, required in group="<structure_name>"
    optional in a_xml_file, a
    endparams

    .include "DBLDIR:synxml.def"

    stack record localData
        error           ,i4
        xml_doc         ,XML_DOC_TYPE
        xml_file        ,a256
    endrecord

proc

    init localData

    if (^passed(a_xml_file) && a_xml_file) then
        xml_file = a_xml_file
    else
        xml_file = "<structure_name>.xml"

    ;Create an XML document containing the records data
    xml_doc = %<structure_name>_xml_doc(<structure_name>)

    ;Save the XML document to an XML file
    xcall xml_doc_tofile(xml_doc,xml_file)

    ;Delete the XML document
    xcall xml_doc_delete(xml_doc)

    freturn error

endfunction


