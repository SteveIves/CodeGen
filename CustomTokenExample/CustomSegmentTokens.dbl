import System
import CodeGen.Engine
import CodeGen.RepositoryAPI

namespace CodeGen.CustomTokenExample
	
	public class CustomSegmentToken1 extends CustomSegmentToken
		
		public override property Token, String
			method get
			proc
				mreturn "<CUSTOM_SEGMENT_TOKEN_1>"
			endmethod
		endproperty
		
		public override method Replace      ,Boolean
			required in    Segment          ,@RpsKeySegment ;;Current key segment
			required in    SegNbr           ,int            ;;Current key segment number
			required in    Fld              ,@RpsField      ;;Field referenced by current segment
			required in    TokenStart       ,int            ;;Start position of token in buffer
			required in    TokenEnd         ,int            ;;End position of token in buffer
			required in    LastSegment      ,int            ;;Is this the last segment of thy key
			required inout buffer           ,a              ;;Buffer containing token to be replaced
			endparams
		proc
			mreturn ReplaceToken(buffer,this.Token,"Custom key segment token 1")
		endmethod
		
	endclass
	
	public class CustomSegmentToken2 extends CustomSegmentToken
		
		public override property Token, String
			method get
			proc
				mreturn "<CUSTOM_SEGMENT_TOKEN_2>"
			endmethod
		endproperty
		
		public override method Replace      ,Boolean
			required in    Segment          ,@RpsKeySegment ;;Current key segment
			required in    SegNbr           ,int            ;;Current key segment number
			required in    Fld              ,@RpsField      ;;Field referenced by current segment
			required in    TokenStart       ,int            ;;Start position of token in buffer
			required in    TokenEnd         ,int            ;;End position of token in buffer
			required in    LastSegment      ,int            ;;Is this the last segment of thy key
			required inout buffer           ,a              ;;Buffer containing token to be replaced
			endparams
		proc
			mreturn ReplaceToken(buffer,this.Token,"Custom key segment token 2")
		endmethod
		
	endclass
	
endnamespace

