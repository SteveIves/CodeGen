export ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

pushd $ROOT &> /dev/null
mkdir kit kit/templates

cp exe/* ./kit
cp ../../Templates/* kit/templates
cp install_setup kit/codegen_setup
cp install_readme kit/README

cd kit

MACHINE_TYPE=`uname -m`
if [ ${MACHINE_TYPE} == 'x86_64' ]; then
  zip -r ../codegen_v_v_v_linux_64_v_v_v.zip *
else
  zip -r ../codegen_v_v_v_linux_32_v_v_v.zip *
fi

cd ..

rm -r kit

popd &> /dev/null
