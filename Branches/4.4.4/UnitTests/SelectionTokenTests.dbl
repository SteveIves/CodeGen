import Microsoft.VisualStudio.TestTools.UnitTesting
import System

namespace CodeGen.UnitTests
	
	{TestClass}
	public class SelectionTokenTests
		
		private mMsg			,String
		
		{TestMethod}
		{TestCategory("Field Selection Loop Token Tests")}
		public method SelectionToken_Number, void
			endparams
		proc
			Assert.IsTrue(doTest(TestEnv.Field002,2,"<SELECTION_NUMBER>","2"),mMsg)
		endmethod
		
		{TestMethod}
		{TestCategory("Field Selection Loop Token Tests")}
		public method SelectionToken_Count, void
			endparams
		proc
			Assert.IsTrue(doTest(TestEnv.Field002,1,"<SELECTION_COUNT>","3"),mMsg)
		endmethod
		
		{TestMethod}
		{TestCategory("Field Selection Loop Token Tests")}
		public method SelectionToken_Text, void
			endparams
		proc
			Assert.IsTrue(doTest(TestEnv.Field002,1,"<SELECTION_TEXT>","Option1"),mMsg)
		endmethod
		
		{TestMethod}
		{TestCategory("Field Selection Loop Token Tests")}
		public method SelectionToken_Value, void
			endparams
		proc
			Assert.IsTrue(doTest(TestEnv.Field002,3,"<SELECTION_VALUE>","3"),mMsg)
		endmethod
		
.region "Support methods"
		
		private method doTest, Boolean
			required in fld			,@CodeGen.RepositoryAPI.RpsField
			required in selNbr		,int	;1-based here, but 0-based in ExpandFieldSelectionToken()
			required in inBuffer	,String
			required in expBuffer	,String
			endparams
		proc
			data ok				,Boolean
			data mainBuffer		,a32768	,inBuffer
			data expectedResult	,a32768	,expBuffer
			data tokenStart		,int	,instr(1,mainBuffer,"<") 
			data tokenEnd		,int	,instr(tokenStart,mainBuffer,">")
			
			mMsg = "PROCESSING: " + atrim(mainBuffer) + " EXPECTED: " + atrim(expectedResult)
			
			if (ok=CodeGen.Engine.ExpandFieldSelectionToken(fld,selNbr-1,tokenStart,tokenEnd,false,mainBuffer))
			begin
				if (instr(1,mainBuffer,"~~~ REMOVE THIS RECORD ~~~"))
					mainBuffer = mainBuffer - "~~~ REMOVE THIS RECORD ~~~"
				ok = (mainBuffer.eqs.expectedResult)
			end
			
			if (!ok)
				mMsg = mMsg + " ACTUAL: " + atrim(mainBuffer)
				
			mreturn ok
			
		endmethod
		
.endregion
		
	endclass
	
endnamespace

